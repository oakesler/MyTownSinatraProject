<h2>Edit Your Profile</h2>
 <p><%=@user.name%></p>
 <p><%=@user.bio%></p>
 
  <form action="/users/<%=@user.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit Your Name:</label>
    <br>
    <input type="text" name="user[name]" id="name" value="<%= @user.name %>">
    <br>
    <label>Edit Your Bio:</label>
    <input type="text" name="user[bio]" id="bio" value="<%= @user.bio%>">
    <input type="submit" value="Edit Profile">
  </form>
  
<a href="/users/<%=@user.id%>">Back to Profile</a>
<a href="/guides">Explore All Guides</a>
