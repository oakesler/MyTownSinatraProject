<%if session[:email] == @user.email%> 
  <h1>Welcome to MyTown, <%=@user.name%>!</h1>
  <br>
  <h2>Your Profile:</h2>
<%else%>
  <h1><%=@user.name%>'s Profile:</h1>
<%end%>
<br>
<h3>Name: <%=@user.name%></h3>
<h3>Bio: <%=@user.bio%></h3>
<br>
  
<%if session[:email] == @user.email %> 
  <h4><a href="/users/<%=@user.id%>/edit">Edit Profile</a> / <a href="/guides/<%=@user.id%>/new">Create a New Guide</a> </h4>
<%end%>
  <br>
  <br>
  <br>
  
<h2>Guides:</h2>
<%if @user.guides.count == 0%>
  <h6>No guides yet!</h6>
<%else%>
  <%@user.guides.each do |guide|%>
  <h4> <a href="/guides/<%=guide.id%>"><%=guide.city%>: <%=guide.name%></a> </h4>
  <%if session[:email] == @user.email %>
    <a href="/guides/<%=guide.id%>/edit">Edit Guide</a>
    <form action="/guides/<%=guide.id%>/delete" method="POST">
      <input type="submit" value="Delete Guide">
    </form>
    <%end%>
  <%end%>
<%end%>

<%if session[:email] == @user.email %>
  <form action="/guides/<%=@user.id%>/delete" method="POST">
    <input type="submit" value="Delete All Guides">
<%end%>

<%if session[:email] == @user.email %>
  <form action="/users/<%=@user.id%>/delete" method="POST">
    <input type="submit" value="Delete All Users">
<%end%>
  <br>
  <br>
  <br>
  <br>
  <p>***********************************</p>
  <a href="/cities">Explore Cities</a>
  <a href="/locations">Explore Locations</a>
  <a href="/users">Explore Users</a>
  <br>
  
  <%if session[:email] == @user.email %>
  <a href="/<%=@user.id%>/logout">Log Out</a>
  <%end%>