<%if @user.email == session[:email]%>
<h1>Edit Your Guide</h1>
<label>Current Guide Name:</label>
 <p><%=@guide.name%></p>
 <label>Current Guide City:</label>
 <p><%=@city.name%></p>
 
  <form action="/guides/<%=@guide.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit Guide Name:</label>
    <br>
    <input type="text" name="guide[name]" id="guide_name" value="<%=@guide.name %>">
    <br>
    <label>Edit City:</label>
    <br>
    <input type="text" name="guide[city]" id="guide_city" value="<%=@city.name%>">
    <br>
    <br>
    <label>...or Choose an Existing City:</label>
    <br>
    
    <p>[Existing Cities:]</p>
  <%city_array = [ ]%>
  <% @cities.each do |city| %>
  <%if !city_array.include?(city.name.capitalize) && !!city.name.scan(/\w/)%>
  <input type="checkbox" name="city[city_ids][]" id="city_<%=city.id%>" value="<%=city.id%>"><%=city.name.capitalize%></input><br>
  <%city_array << city.name.capitalize%>
  <% end %>
  <%end%>
  <br>
    
    <a href="/locations/<%=@guide.id%>/new">Add new locations to this guide</a>
      
      <h4>Guide Locations:</h4>
    <%@locations.each do |item|%>
      <p><%=item.name%></p>
      <p><%=item.address%></p>
      <p><%=item.description%></p>
      <%@location_types.each do |type|%>
      <%if type.id == item.location_type_id%>
      <p><%=type.name%></p>
      <%end%>
      <%end%>
      <a href="/locations/<%=item.id%>/edit">Edit this location</a>
      <br>
      <br>
      <br>
    <%end%>
      
    <input type="submit" value="Edit Guide">
  </form>
  
  <form action="/guides/<%=@guide.id%>/delete" method="POST">
    <input type="submit" value="Delete Guide">
  </form>
    
  
<a href="/users/<%=@user.id%>/">Back to Profile</a>
<a href="/cities">Explore All Cities</a>
<a href="/locations">Explore All Locations</a>
<%end%>
<%if @user.email != session[:email]%>
Sorry, you need to log in to view this page!
<a href = "/">Log in/Sign up</a>
<%end%>